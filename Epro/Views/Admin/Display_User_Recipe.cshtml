@model IEnumerable<Epro.Models.UserRecipe>
@{
    Layout = "_LayoutAdmin";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Data table</h3>
                            </div>
                        </div>
                    
                    <div class="QA_table mb_30">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Recipe Name</th>
                                     <th scope="col">Recipe Ingredients</th>
                                        <th scope="col">Recipe User Name</th>
                                        <th scope="col">Recipe Status</th>
                                        <th scope="col">Approve</th>
                                     <th scope="col">Delete</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                        <tr>
                                            <td>@item.UserRecipeName</td>
                                            <td>@item.UserRecipeIngredients</td>
                                            <td>@item.UserRecipeUserName</td>
                                            <td>@item.UserRecipeStatus</td>
                                            <td><a class="btn btn-success" asp-controller="Admin" asp-action="Approve_User_Recipe" asp-route-id="@item.UserRecipeId">Approve</a></td>
                                            <td><a class="btn btn-danger" asp-controller="Admin" asp-action="Delete_User_Recipe" asp-route-id="@item.UserRecipeId">Delete</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</div>

@{
    string addrecipe = TempData["Message"] as string;
    string Recipe_Approve = TempData["Recipe_Approve"] as string;
    string delrecipe = TempData["del"] as string;

}
@if(!string.IsNullOrEmpty(addrecipe))
{
    <script>
        alert("@addrecipe");
    </script>
}
@if (!string.IsNullOrEmpty(delrecipe))
{
    <script>
        alert("@delrecipe");
    </script>
}

@if (!string.IsNullOrEmpty(Recipe_Approve))
{
    <script>
        alert("@Recipe_Approve");
    </script>
}
