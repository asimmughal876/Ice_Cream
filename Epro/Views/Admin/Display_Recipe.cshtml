@model IEnumerable<Epro.Models.Recipe>
@{
    Layout = "_LayoutAdmin";
}

<div class="main_content_iner ">
    <div class="container-fluid p-0">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="white_card card_height_100 mb_30">
                    <div class="white_card_header">
                        <div class="box_header m-0">
                            <div class="main-title">
                                <h3 class="m-0">Data table</h3>
                            </div>
                        </div>

                        <div class="QA_table mb_30">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">Recipe</th>
                                        <th scope="col">Recipe Ingredients</th>
                                        <th scope="col">Recipe Image</th>
                                        <th scope="col">Recipe Price</th>
                                        <th scope="col">Update</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                           
                                         <td>@item.RecipeName</td>
                                            <td>@item.RecipeIngredients</td>
                                            <td><img src="~/@item.RecipeImage" width="100" height="100"/></td>
                                            <td>@item.RecipePrice</td>
                                            <td><a class="btn btn-success" asp-controller="Admin" asp-action="Edit_Recipe" asp-route-id="@item.RecipeId">Update</a></td>
                                            <td><a class="btn btn-danger" asp-controller="Admin" asp-action="Delete_Recipe" asp-route-id="@item.RecipeId">Delete</a></td>
                                         </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    string addRecipe = TempData["Message"] as string;
    string uRecipe = TempData["urecipe"] as string;
    string delrecipe = TempData["del"] as string;
}
@if (!string.IsNullOrEmpty(addRecipe))
{
    <script>
        alert("@addRecipe");
    </script>
}
@if (!string.IsNullOrEmpty(uRecipe))
{
    <script>
        alert("@uRecipe");
    </script>
}
@if (!string.IsNullOrEmpty(delrecipe))
{
    <script>
        alert("@delrecipe");
    </script>
}

