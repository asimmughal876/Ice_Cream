@model Epro.Models.UserRecipe

<div class="ice_main_section1">
    <div class="container">
        <div class="row">
            <div class="col col-lg-8 col-sm-12 col-xs-12">
                <div class="contact_wrapper wow slideleft">
                    <h1 class="ice_heading text-center">Send Recipe</h1>
                    <div class="contact_form">
                        <div class="row">

                            <form method="post">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>
                                        <input type="hidden" value="Pending" asp-for="UserRecipeStatus" class="require">

                                        <input type="text" asp-for="UserRecipeName" class="require" required>
                                        <label>Recipe Name<span class="required" title="required">*</span></label>
                                    </p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>
                                        <input type="text" value="" asp-for="UserRecipeIngredients" class="require" required>
                                        <label>Recipe Ingredients<span class="required" title="required">*</span></label>
                                    </p>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                    <input type="text" asp-for="UserRecipeUserName" class="require" required>
                                    <label>User Name<span class="required" title="required">*</span></label>

                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <button type="submit" class="ice_btn submitForm">submit</button>
                                </div>
                                <div class="response text-center text-capitalize"></div>
                            </form>
                        </div>
                    </div>
                </div>
              
            </div>

            <div class="col-lg-4  col-sm-12 col-xs-12" style="margin-top:20px;">
                <div class="contact_detail text-center wow slideright">
                    <h1 class="ice_heading_white text-center">information</h1>
                    <ul>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-facebook-placeholder-for-locate-places-on-maps white"></i>
                                <p class="white">44 Shirley Ave.  West Chicago, IL 60185</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-call-answer	 white"></i>
                                <p class="white">+6236598963, +6236598965</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-mail-black-envelope-symbol white"></i>
                                <p class="white">Help@yourmail.com, Mail.mail@mail.com</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

        </div>

    </div>
</div>
<div class="map_wrapper">
    <div id="" class="ice_map">
