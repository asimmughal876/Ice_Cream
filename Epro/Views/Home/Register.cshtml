@model Epro.Models.UserRecord
<div class="ice_main_section1">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
                <div class="contact_wrapper wow slideleft">
                    <h1 class="ice_heading text-center">Register Now</h1>
                    <div class="contact_form">
                        <div class="row">
                            <form asp-controller="Home" asp-action="Register" method="post">
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>
                                        <input required asp-for="UserName" class="require" required />
                                        <label asp-for="UserName"></label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>
                                        <input type="email" asp-for="UserEmail" class="require" required />
                                        <label asp-for="UserEmail"></label>
                                        <span asp-validation-for="UserEmail" class="text-danger"></span>
                                    </p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>
                                        <input type="password" required asp-for="UserPassword" type="password" class="require" required />
                                        <label >Password</label>
                                        <span asp-validation-for="UserPassword" class="text-danger"></span>
                                    </p>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                    <p>

                                        <select required asp-for="PaymentAmount" class="require" required>
                                            <option value=""></option>
                                            <option value="15$">Monthly: 15$</option>
                                            <option value="150$">Yearly: 150$</option>
                                        </select>
                                        <label>Subscription</label>
                                    </p>
                                </div>
                                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                                    <button type="submit" class="ice_btn submitForm">SUBMIT</button>
                                </div>
                                <div class="response text-center text-capitalize"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="contact_detail text-center wow slideright">
                    <h1 class="ice_heading_white text-center">information</h1>
                    <ul>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-facebook-placeholder-for-locate-places-on-maps white"></i>
                                <p class="white">44 Shirley Ave.  West Chicago, IL 60185</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-call-answer	 white"></i>
                                <p class="white">+6236598963, +6236598965</p>
                            </div>
                        </li>
                        <li>
                            <div class="contact_section">
                                <i class="flaticon-mail-black-envelope-symbol white"></i>
                                <p class="white">Help@yourmail.com, Mail.mail@mail.com</p>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    string Message = TempData["Message"] as string;

}
@if (!string.IsNullOrEmpty(Message))
{
    <script>
        alert("@Message");
    </script>
}
